volumes:
  etc_wireguard:

services:
  wg-easy:
    environment:
      - HOST=0.0.0.0
    #  Optional:
    #  - PORT=51821
    #  - INSECURE=false

    image: ghcr.io/wg-easy/wg-easy:15
    container_name: wg-easy
    networks:
      wg:
        ipv4_address: 10.42.42.42
      traefik: {}
    labels:
      - "traefik.enable=true"

      # HTTP router
      - "traefik.http.routers.wg-easy-http.rule=Host(`vpn.giodivino.dev`)"
      - "traefik.http.routers.wg-easy-http.entrypoints=web"
      - "traefik.http.routers.wg-easy-http.middlewares=wg-easy-redirect"
      - "traefik.http.middlewares.wg-easy-redirect.redirectscheme.scheme=https"

      # HTTPS router
      - "traefik.http.routers.wg-easy-https.rule=Host(`vpn.giodivino.dev`)"
      - "traefik.http.routers.wg-easy-https.entrypoints=websecure"
      - "traefik.http.routers.wg-easy-https.tls=true"
      - "traefik.http.routers.wg-easy-https.tls.certresolver=letsencrypt"
      - "traefik.http.routers.wg-easy-http.service=wg-easy"
      - "traefik.http.routers.wg-easy-https.service=wg-easy"
      - "traefik.http.services.wg-easy.loadbalancer.server.port=51821"
    volumes:
      - etc_wireguard:/etc/wireguard
      - /lib/modules:/lib/modules:ro
    ports:
      - "51820:51820/udp"
      - "51821:51821/tcp"
    restart: unless-stopped
    cap_add:
      - NET_ADMIN
      - SYS_MODULE
      # - NET_RAW # ⚠️ Uncomment if using Podman
    sysctls:
      - net.ipv4.ip_forward=1
      - net.ipv4.conf.all.src_valid_mark=1
      - net.ipv6.conf.all.disable_ipv6=1
      - net.ipv6.conf.all.forwarding=0
      - net.ipv6.conf.default.forwarding=0

networks:
  wg:
    driver: bridge
    enable_ipv6: false
    ipam:
      driver: default
      config:
        - subnet: 10.42.42.0/24
  traefik:
    external: true
