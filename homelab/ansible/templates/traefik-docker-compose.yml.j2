services:
  traefik:
    image: traefik:3.3
    container_name: traefik
    restart: unless-stopped
    ports:
      - "80:80"
      - "443:443/tcp"
      - "443:443/udp"
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
      - /home/ubuntu/traefik-data/traefik.yml:/traefik.yml:ro
      - /home/ubuntu/traefik-data/traefik_dynamic.yml:/traefik_dynamic.yml:ro
      - /home/ubuntu/traefik-data/acme.json:/acme.json
    networks:
      - traefik

networks:
  traefik:
    external: true
