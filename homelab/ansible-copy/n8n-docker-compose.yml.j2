version: '3.7'
services:
  n8n:
    image: n8nio/n8n
    container_name: n8n
    restart: always
    ports:
      - "127.0.0.1:5678:5678"
    environment:
      - N8N_HOST={{ ansible_hostname }}
      - N8N_PORT=5678
      - N8N_PROTOCOL=http
      - NODE_ENV=production
      - WEBHOOK_URL=http://{{ ansible_hostname }}:5678/
    volumes:
      - ./n8n_data:/home/node/.n8n
